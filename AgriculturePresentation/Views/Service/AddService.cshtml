@model AgriculturePresentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni hizmet girişi</h4>
             
              
                    <div class="form-group">
                    @Html.Label("Başlık")
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                    @Html.Label("Açıklama")
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" asp-for="Description" class="form-control" />
                    </div>
                   
                    <div class="form-group">
                    @Html.Label("Görsel Yolu")
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <input type="text" asp-for="Image" class="form-control" />
                    </div>

                    
                    <button class="btn btn-outline-primary">Kaydet</button>
                   
       
            </div>
        </div>
    </div>
</form>

