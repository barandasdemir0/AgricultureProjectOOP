@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">hizmet Güncelleme</h4>

                @Html.HiddenFor(x => x.ServiceID)
                <div class="form-group">
                    @Html.Label("Başlık")
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    @Html.Label("Açıklama")
                    <input type="text" asp-for="Description" class="form-control" />
                </div>

                <div class="form-group">
                    @Html.Label("Görsel Yolu")
                    <input type="text" asp-for="Image" class="form-control" />
                </div>


                <button class="btn btn-outline-primary">Güncelle</button>


            </div>
        </div>
    </div>
</form>