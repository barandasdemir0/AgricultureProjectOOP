@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>Hizmet Güncelleme</h1>

<form method="post">
    @Html.HiddenFor(x => x.ServiceID)
    @Html.Label("Başlık")
    <span asp-validation-for="Title" class="text-danger"></span>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    @Html.Label("Açıklama")
    <span asp-validation-for="Description" class="text-danger"></span>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    @Html.Label("Görsel Yolu")
    <span asp-validation-for="Image" class="text-danger"></span>
    <input type="text" asp-for="Image" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>
</form>

