@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Görsel girişi</h4>

                <div class="form-group">
                    <label> Görsel ad</label>
                    <span asp-validation-for="Title"></span>
                    <input type="text" asp-for="Title" class="form-control" placeholder="görsel başlığı" />
                </div>

                <div class="form-group">
                    <label> Açıklama</label>
                    <span asp-validation-for="Description"></span>
                    <input type="text" asp-for="Description" class="form-control" placeholder="Açıklama" />
                </div>
              


                <div class="form-group">
                    <label> Görsel yolu</label>
                    <span asp-validation-for="ImageUrl"></span>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görsel Yolu" />
                </div>


            
                <button class="btn btn-outline-primary">Kaydet</button>


            </div>
        </div>
    </div>
</form>

