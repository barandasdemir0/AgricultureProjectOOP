@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Güncelleme</h4>

                @Html.HiddenFor(x => x.AdminID)
                <div class="form-group">
                    <label> Admin adı</label>
                    <input type="text" asp-for="Username" class="form-control" placeholder="adı" />
                </div>

             


                <div class="form-group">
                    <label> Şifresi</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre giriniz" />
                </div>

              
                <button class="btn btn-outline-primary">Kaydet</button>
            </div>
        </div>
    </div>
</form>
