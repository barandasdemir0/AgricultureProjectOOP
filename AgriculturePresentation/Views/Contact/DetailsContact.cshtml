@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "DetailsContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayları</h4>

                @Html.HiddenFor(x => x.ContactID)
                <div class="form-group">
                    <label> Adı Soyadı</label>
                    <span asp-validation-for="Name"></span>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label> Mail Adresi</label>
                    <span asp-validation-for="Mail"></span>
                    <input type="text" asp-for="Mail" class="form-control" />
                </div>


                <div class="form-group">
                    <label> Tarih</label>
                    <span asp-validation-for="Date"></span>
                    <input type="text" asp-for="Date" class="form-control" />
                </div>


                <div class="form-group">
                    <label>Mesaj Detayı</label>
                    <textarea type="text" cols="5" rows="20" asp-for="Message" class="form-control" ></textarea>
                </div>


              


            </div>
        </div>
    </div>
</form>

