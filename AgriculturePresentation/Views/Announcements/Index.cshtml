@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Başlık
                            </th>
                            <th>
                                Tarih
                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                Güncelle
                            </th>
                            <th>
                                Aktif
                            </th>
                            <th>
                                Pasif
                            </th>
                            <th>
                                Aktif/Pasif
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcements/DeleteAnnouncements/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcements/UpdateAnnouncements/@item.AnnouncementID" class="btn btn-outline-warning">Güncelle</a></td>
                                <td><a href="/Announcements/ChangeStatusTrue/@item.AnnouncementID" class="btn btn-outline-success">Aktif Yap</a></td>
                                <td><a href="/Announcements/ChangeStatusFalse/@item.AnnouncementID" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                @if (item.Status == true)
                                {
                                    <td><a href="/Announcements/ChangeStatus/@item.AnnouncementID" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                }
                                @if (item.Status == false)
                                {
                                    <td><a href="/Announcements/ChangeStatus/@item.AnnouncementID" class="btn btn-outline-secondary">Aktif Yap</a></td>
                                }
                                
                               
                                
                                
                            </tr>
                        }
                    </tbody>
                </table>

                <a href="/Announcements/AddAnnouncements/" class="btn btn-outline-info">Yeni Duyuru ekle</a>

            </div>
        </div>
    </div>
</div>
