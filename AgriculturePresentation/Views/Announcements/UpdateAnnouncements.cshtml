@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "UpdateAnnouncements";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Duyuru Güncelleme</h4>

                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">
                    <label> Görevi</label>  
                    <input type="text" asp-for="Title" class="form-control" placeholder="Başlık" />
                </div>

                <div class="form-group">
                    <label>Durum</label>
                    <select asp-for="Status" class="form-control">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                </div>


                <div class="form-group">
                    <label> Görevi</label>
                    <input type="date" asp-for="Date" class="form-control" placeholder="Tarih Giriniz" />
                </div>

                <div class="form-group">
                    <label> Görsel</label>
                    <textarea cols="30" rows="5" asp-for="Description" class="form-control" placeholder="Açıklama"></textarea>
                </div>
                <button class="btn btn-outline-primary">Kaydet</button>
            </div>
        </div>
    </div>
</form>

