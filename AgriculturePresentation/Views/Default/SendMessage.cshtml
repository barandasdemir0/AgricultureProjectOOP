@model EntityLayer.Concrete.Contact


<div class="col-md-9 contact-middle">
	<h2>Bize Ulaşın</h2>
	 @using (Html.BeginForm("SendMessage", "Default", FormMethod.Post))
	{ 
		

		<div class="form-agileinfo">
			<p>Adınız Soyadınız</p>
			<input type="text" asp-for="Name" placeholder="isim soyisminiz" required="" />
			<p>Mail Adresiniz</p>
			<input type="email" asp-for="Mail" placeholder="mailiniz" required="" />
		</div>
		<div class="form-agileits-w3layouts">
			<p>Mesajınız</p>
			<textarea asp-for="Message" placeholder="mesajınız" required=""></textarea>
			@* <input type="submit" value="Mesaj Gönder"> *@
			<button asp-action="SendMessage" asp-controller="Default" class="btn btn-success" type="submit">Mesajı Gönder</button>
		</div>
		<div class="clearfix"></div>

		
		
	 } 
</div>